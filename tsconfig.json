{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "lib": [
            "dom",
            "es2015",
            "es6",
            "esnext"
        ],
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noStrictGenericChecks": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "src",
        "paths": {
            "app/*": ["./*"]
        }
    }
}