{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noStrictGenericChecks": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "src",
        "paths": {
            "app/*": ["./*"]
        }
    }
}